<?xml version="1.0"?>
<ruleset name="Drupal Field">
  <description>PHP CodeSniffer configuration for the module</description>
  <arg name="extensions" value="php, yml, text, module"/>
  <arg name="colors"/>
  <rule ref="Drupal">
    <exclude name="Drupal.Commenting.FileComment.Missing"/>
    <exclude name="Drupal.Commenting.FunctionComment.MissingParamComment"/>
    <exclude name="Drupal.Classes.FullyQualifiedNamespace.UseStatementMissing"/>
  </rule>
  <rule ref="DrupalPractice">
    <exclude name="DrupalPractice.Commenting.CommentEmptyLine.SpacingAfter"/>
    <exclude name="Drupal.Commenting.DocComment.ShortNotCapital"/>
    <exclude name="Drupal.Commenting.DocComment.ShortFullStop"/>
    <exclude name="Drupal.Arrays.Array.CommaLastItem"/>
    <exclude name="DrupalPractice.FunctionCalls.InsecureUnserialize.InsecureUnserialize"/>
  </rule>
</ruleset>
